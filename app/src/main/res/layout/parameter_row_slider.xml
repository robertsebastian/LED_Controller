<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/argName"
        android:text="@string/arg_placeholder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/argName"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/argValue"
        android:text="@string/arg_placeholder" />

    <SeekBar
        android:layout_below="@+id/argName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slider_margin"
        android:max="255"
        android:id="@+id/argSeekBar" />
</RelativeLayout>